@model VTIntranet.Models.LoginViewModel
@{ 
   Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>VT Intranet</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Scripts/login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/login/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Scripts/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/login/css/main.css">
    <!--===============================================================================================-->
    
    <style>
        .login {
            background-image: url("UploadedFiles/login.jpg");
            max-width: 100%;
            height: 100%;
            background-size: cover;
            background-position:center;
        }
        .wrap-login100{margin:0 auto; background: transparent; width:75%}
        .login100-form{background:#fff; padding:30px}
        .login100-form-title{    font-family: Poppins-Regular;}
    </style>

</head>
<body>
    <div class="login">
        <div class="wrap-login100 p-t-85 p-b-20">
            @*<form class="login100-form validate-form">*@
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login100-form validate-form" }))
                    {
                    @Html.AntiForgeryToken()
                    <p class="login100-form-title p-b-70">
                        ¡Bienvenido a <span>VTintranet!</span>
                    </p>
                    <span class="login100-form-avatar">
                        <img src="~/Scripts/login/images/User_Avatar-512.jpg" alt="AVATAR">
                    </span>
                    <div style="text-align: center; color: crimson; font-size: smaller;">
                        @Html.ValidationSummary()
                    </div>
                    <div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate="Enter user name">
                        <input class="input100" type="text" name="UserName">
                        <span class="focus-input100" data-placeholder="Username"></span>
                    </div>

                    <div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
                        <input class="input100" type="password" name="Password">
                        <span class="focus-input100" data-placeholder="Password"></span>
                    </div>
                    <br />
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>               
                    }
            @*</form>*@
        </div>
    </div>
    

    

    <!--===============================================================================================-->
    <script src="~/Scripts/login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Scripts/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Scripts/login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/js/main.js"></script>

</body>
</html>

